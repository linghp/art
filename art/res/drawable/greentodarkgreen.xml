<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/green700" />
            <corners
                android:radius="3dp" />
		    <padding
		        android:bottom="5dp"
		        android:left="16dp"
		        android:right="16dp"
		        android:top="5dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/gray" />
            <corners
                android:radius="3dp" />
		    <padding
		        android:bottom="5dp"
		        android:left="16dp"
		        android:right="16dp"
		        android:top="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/green" />
            <corners
                android:radius="3dp" />
		    <padding
		        android:bottom="5dp"
		        android:left="16dp"
		        android:right="16dp"
		        android:top="5dp" />
        </shape>
    </item>
</selector>