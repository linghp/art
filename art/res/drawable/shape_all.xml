<?xml version="1.0" encoding="UTF-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dip" android:color="@color/gray" />
            <solid android:color="@color/bg_gray" />
            <corners
                android:radius="3dp" />
		    <padding
		        android:bottom="1dp"
		        android:left="1dp"
		        android:right="1dp"
		        android:top="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1dip" android:color="@color/gray" />
            <solid android:color="@android:color/transparent" />
            <corners
                android:radius="3dp" />
		    <padding
		        android:bottom="1dp"
		        android:left="1dp"
		        android:right="1dp"
		        android:top="1dp" />
        </shape>
    </item>
</selector>