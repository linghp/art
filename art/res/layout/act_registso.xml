<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shangxian.art.RegistSogoActivity" >

    <com.shangxian.art.view.TopView
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sogt_tv_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/top_title"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="使用手机好注册爱农谷账号"
        android:textColor="@color/grey700"
        android:textSize="18sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sogt_tv_title" >

        <LinearLayout
            android:id="@+id/sogl_ll_li1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/txt_white"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手  机  号"
                        android:textColor="@color/txt_black1"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/grey500" />

                    <EditText
                        android:id="@+id/soge_et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:hint="请输入手机号"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:textColor="@color/txt_black1"
                        android:textColorHint="@color/txt_black2"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey300" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="验  证  码"
                        android:textColor="@color/txt_black1"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/grey500" />

                    <EditText
                        android:id="@+id/soge_et_yan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:hint="请输入验证码"
                        android:inputType="numberSigned"
                        android:singleLine="true"
                        android:textColor="@color/txt_black1"
                        android:textColorHint="@color/txt_black2"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:id="@+id/sogr_rl_yan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/draw_sogo_bg_sel"
                        android:orientation="horizontal"
                        android:padding="4dp" >

                        <TextView
                            android:id="@+id/sogt_tv_getyan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="获取验证码"
                            android:textColor="@color/txt_white"
                            android:textSize="16sp"
                            android:visibility="invisible" />

                        <LinearLayout
                            android:id="@+id/sogl_ll_loading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="invisible" >

                            <ProgressBar
                                style="?android:attr/progressBarStyleSmall"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:indeterminateDrawable="@drawable/load_bg" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="4dp"
                                android:text="验证码..."
                                android:textColor="@color/txt_white"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey300" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登录密码"
                        android:textColor="@color/txt_black1"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/grey500" />

                    <EditText
                        android:id="@+id/soge_et_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:hint="请输入登录密码"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/txt_black1"
                        android:textColorHint="@color/txt_black2"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey300" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="重复密码"
                        android:textColor="@color/txt_black1"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/grey500" />

                    <EditText
                        android:id="@+id/soge_et_repass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:hint="请重复登录密码"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/txt_black1"
                        android:textColorHint="@color/txt_black2"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/sogt_tv_next1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/soge_not_bg_sel"
                    android:gravity="center"
                    android:text="取    消"
                    android:textColor="@color/col_w1tow2"
                    android:textSize="18sp"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:id="@+id/sogt_tv_no1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/soge_next_bg_sel"
                    android:gravity="center"
                    android:text="下一步"
                    android:textColor="@color/col_w1tow2"
                    android:layout_marginLeft="8dp"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/sogl_ll_li2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/txt_white"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="店铺名称"
                        android:textColor="@color/txt_black1"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/grey500" />

                    <EditText
                        android:id="@+id/soge_et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:hint="请输入您的店铺名称"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:textColor="@color/txt_black1"
                        android:textColorHint="@color/txt_black2"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey300" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="营业执照"
                        android:textColor="@color/txt_black1"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/grey500" />

                    <EditText
                        android:id="@+id/soge_et_charter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:hint="请输入你营业执照注册号"
                        android:inputType="numberSigned"
                        android:singleLine="true"
                        android:textColor="@color/txt_black1"
                        android:textColorHint="@color/txt_black2"
                        android:textSize="18sp" />                   
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey300" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所  在  地"
                        android:textColor="@color/txt_black1"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/grey500" />

                    <EditText
                        android:id="@+id/soge_et_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:hint="请输入你营业执照的所在地"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/txt_black1"
                        android:textColorHint="@color/txt_black2"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey300" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="营业期限"
                        android:textColor="@color/txt_black1"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/grey500" />

                    <EditText
                        android:id="@+id/soge_et_totime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:hint="请输入营业期限"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/txt_black1"
                        android:textColorHint="@color/txt_black2"
                        android:textSize="18sp" />
                </LinearLayout>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey300" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="常用地址"
                        android:textColor="@color/txt_black1"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/grey500" />

                    <EditText
                        android:id="@+id/soge_et_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:hint="请输入常用地址"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/txt_black1"
                        android:textColorHint="@color/txt_black2"
                        android:textSize="18sp" />
                </LinearLayout>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey300" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系电话"
                        android:textColor="@color/txt_black1"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/grey500" />

                    <EditText
                        android:id="@+id/soge_et_cell"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:hint="请输入联系电话"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/txt_black1"
                        android:textColorHint="@color/txt_black2"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/sogt_tv_next2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/soge_not_bg_sel"
                    android:gravity="center"
                    android:text="取    消"
                    android:textColor="@color/col_w1tow2"
                    android:textSize="18sp"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:id="@+id/sogt_tv_no2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/soge_next_bg_sel"
                    android:gravity="center"
                    android:text="下一步"
                    android:textColor="@color/col_w1tow2"
                    android:layout_marginLeft="8dp"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>