<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/item_commodity_img"
        style="@style/item_image_attr"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_commodity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="新鲜菠萝\葡萄\香蕉\苹果果篮特价出售"
            android:textSize="@dimen/list_summary_size" />

        <TextView
            android:id="@+id/item_commodity_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="新鲜水果上市，欢迎选购"
            android:textColor="@color/txt_black2"
            android:textSize="@dimen/list_min_size" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/red300"
                android:textSize="@dimen/list_summary_size" />

            <TextView
                android:id="@+id/item_commodity_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="320"
                android:textColor="@color/red300"
                android:textSize="@dimen/list_summary_size" />

            <!--
                 <ImageView
			    android:id="@+id/item_commodity_shop"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/shoppingcart_btn" />
            -->

        </LinearLayout>
    </LinearLayout>

</LinearLayout>