<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_white2" >

    <com.shangxian.art.view.TopView
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_title"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/txt_white"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品标题"
                    android:textColor="@color/txt_black2"
                    android:textSize="@dimen/list_title_size" />

                <EditText
                    android:id="@+id/addgoods_addname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/regist_et_bg_sel"
                    android:hint="请输入商品标题"
                    android:padding="10dp"
                    android:textColor="@color/txt_black3"
                    android:textSize="@dimen/list_summary_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品类别"
                    android:textColor="@color/txt_black2"
                    android:textSize="@dimen/list_title_size" />

                <TextView
                    android:id="@+id/addgoods_shangpinleibie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/regist_et_bg_sel"
                    android:drawableRight="@drawable/pulldown"
                    android:padding="10dp"
                    android:text="请选择商品类别"
                    android:textColor="@color/txt_black3"
                    android:textSize="@dimen/list_summary_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送类别"
                    android:textColor="@color/txt_black2"
                    android:textSize="@dimen/list_title_size" />

                <TextView
                    android:id="@+id/addgoods_peisongleibie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/regist_et_bg_sel"
                    android:drawableRight="@drawable/pulldown"
                    android:padding="10dp"
                    android:text="请选择配送类别"
                    android:textColor="@color/txt_black3"
                    android:textSize="@dimen/list_summary_size" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="添加商品图片"
                android:textColor="@color/txt_black2"
                android:textSize="@dimen/list_title_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/addgoods_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/addimage" />

                <ImageView
                    android:id="@+id/addgoods_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/addimage" />

                <ImageView
                    android:id="@+id/addgoods_img3"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/addimage" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/addgoods_img4"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/addimage" />

                <ImageView
                    android:id="@+id/addgoods_img5"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/addimage" />

                <ImageView
                    android:id="@+id/addgoods_img6"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/addimage" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="商品描述"
                android:textColor="@color/txt_black2"
                android:textSize="@dimen/list_title_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/regist_et_bg_sel"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <EditText
                    android:id="@+id/addgoods_edit"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/regist_et_bg_sel"
                    android:gravity="top"
                    android:hint="请输入商品描述"
                    android:padding="5dp"
                    android:textColor="@color/txt_black1"
                    android:textSize="@dimen/list_summary_size" />

                <TextView
                    android:id="@+id/addgoods_zishu_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:text="0/150"
                    android:textColor="@color/txt_green"
                    android:textSize="@dimen/list_min_size" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/addgoods_quxiao"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_btn"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="取    消"
                    android:textColor="@color/txt_whitetoback"
                    android:textSize="@dimen/button_txt_size" />

                <TextView
                    android:id="@+id/addgoods_next"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_btn"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="下一步"
                    android:textColor="@color/txt_whitetoback"
                    android:textSize="@dimen/button_txt_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>