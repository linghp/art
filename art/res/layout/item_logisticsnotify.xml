<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/txt_white2" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_write"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/item_logisticsnotify_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的订单已经完成了"
            android:textColor="@color/txt_black1"
            android:textSize="@dimen/list_title_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/item_logisticsnotify_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_loading" />

            <TextView
                android:id="@+id/item_logisticsnotify_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="您购买的新鲜菠萝\葡萄\香蕉\苹果果篮，特价商品出售订单已完成"
                android:textColor="@color/txt_black1"
                android:textSize="@dimen/list_summary_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/txt_black3" />

        <TextView
            android:id="@+id/item_logisticsnotify_look"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="查看详情"
            android:textColor="@color/txt_black1"
            android:textSize="@dimen/list_summary_size" />
    </LinearLayout>

</LinearLayout>