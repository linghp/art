<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_white2" >

    <com.shangxian.art.view.TopView
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/safetyverification_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_title"
        android:background="@color/txt_white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="8dp" >

        <TextView
            android:id="@+id/saft_tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/list_title_size"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/safe_et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/regist_et_bg_sel"
            android:hint="请输入账号绑定的手机号"
            android:padding="10dp"
            android:textColor="@color/txt_black1"
            android:textSize="@dimen/list_title_size"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/safl_ll_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/safe_et_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/regist_et_bg_sel"
                android:hint="短信验证码"
                android:numeric="integer"
                android:padding="10dp"
                android:textColor="@color/txt_black1"
                android:textSize="@dimen/list_title_size" />

            <TextView
                android:id="@+id/saft_tv_code"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_btn"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="验证码"
                android:textColor="@color/col_safe"
                android:textSize="@dimen/list_title_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/safetverification_zhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/txt_black3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="安全问题"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/list_title_size" />

            <TextView
                android:id="@+id/safetverification_question"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/regist_et_bg_sel"
                android:drawableRight="@drawable/next_level"
                android:padding="5dp"
                android:text="父亲的姓名"
                android:textColor="@color/txt_black2"
                android:textSize="@dimen/list_title_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/txt_black3" />

            <EditText
                android:id="@+id/safetverification_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/regist_et_bg_sel"
                android:hint="请输入安全问题的答案"
                android:padding="5dp"
                android:textColor="@color/txt_black1"
                android:textSize="@dimen/list_title_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/changepassword_linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_title"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_pass_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingTop="10dp"
                android:text="设置支付密码"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/list_title_size" />

            <EditText
                android:id="@+id/safe_et_old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/regist_et_bg_sel"
                android:hint="请输入当前支付密码"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/txt_black1"
                android:textSize="@dimen/list_title_size" />

            <EditText
                android:id="@+id/safe_et_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/regist_et_bg_sel"
                android:hint="新的登录密码"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/txt_black1"
                android:textSize="@dimen/list_title_size"
                android:visibility="visible" />

            <EditText
                android:id="@+id/safe_et_renew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/regist_et_bg_sel"
                android:hint="新的支付密码"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/txt_black1"
                android:textSize="@dimen/list_title_size" />

            <TextView
                android:id="@+id/saft_tv_enum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="注 :密码由6-20位英文字母、数字或符号组成"
                android:textColor="@color/red300"
                android:textSize="@dimen/list_summary_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/changepassword_linear1"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="48dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/saft_tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/soge_not_bg_sel"
                android:gravity="center_horizontal"
                android:onClick="doClick"
                android:padding="8dp"
                android:text="取消"
                android:textColor="@color/txt_whitetoback"
                android:textSize="@dimen/button_txt_size" />

            <TextView
                android:id="@+id/saft_tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/soge_next_bg_sel"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="保存"
                android:textColor="@color/txt_whitetoback"
                android:textSize="@dimen/button_txt_size" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>