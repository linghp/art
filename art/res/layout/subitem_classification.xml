<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/txt_white2"
    android:padding="10dp"
    android:gravity="center_vertical" >
    <ImageView 
        android:id="@+id/subitem_classification_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/alipaypayment"/>
    <TextView 
        android:id="@+id/subitem_classification_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="展开的分类"
        android:layout_marginLeft="5dp"
        android:textColor="@color/txt_black1"
        android:textSize="@dimen/list_title_size"/>

</LinearLayout>
