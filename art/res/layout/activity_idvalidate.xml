<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_white2" >

    <com.shangxian.art.view.TopView
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/idvalidate_txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_title"
        android:background="@color/gray"
        android:padding="10dp"
        android:text="支付密码验证"
        android:textColor="@color/txt_black2"
        android:textSize="@dimen/list_title_size" />

    <LinearLayout
        android:id="@+id/idvalidate_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idvalidate_txt1"
        android:background="@color/txt_white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:padding="10dp" >

        <EditText
            android:id="@+id/idvalidate_mima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/regist_et_bg_sel"
            android:hint="请输入支付密码"
            android:numeric="decimal"
            android:padding="10dp"
            android:password="true"
            android:textColor="@color/txt_black2"
            android:textSize="@dimen/list_title_size" />
    </LinearLayout>
    <TextView
        android:id="@+id/idvalidate_txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idvalidate_linear1"
        android:background="@color/gray"
        android:padding="10dp"
        android:text="请输入手机157****8182收到的短信校验码"
        android:textColor="@color/txt_black2"
        android:textSize="@dimen/list_title_size" />
<LinearLayout
        android:id="@+id/idvalidate_linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idvalidate_txt2"
        android:background="@color/txt_white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:padding="10dp" >

        <EditText
            android:id="@+id/idvalidate_yanzhengma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/regist_et_bg_sel"
            android:hint="短信验证码"
            android:numeric="integer"
            android:padding="10dp"
            android:textColor="@color/txt_black2"
            android:textSize="@dimen/list_title_size" />
        <TextView
            android:id="@+id/idvalidate_huoqu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_btn"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:text="获取验证码"
            android:textColor="@color/txt_whitetoback"
            android:textSize="@dimen/list_title_size" />
    </LinearLayout>
    
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idvalidate_linear2"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/idvalidate_shangyibu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_btn"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="上一步"
            android:textColor="@color/txt_whitetoback"
            android:textSize="@dimen/button_txt_size" />

        <TextView
            android:id="@+id/idvalidate_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/btn_btn"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="下一步"
            android:textColor="@color/txt_whitetoback"
            android:textSize="@dimen/button_txt_size" />
    </LinearLayout>
</RelativeLayout>