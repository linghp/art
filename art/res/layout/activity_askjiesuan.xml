<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_white" >

    <com.shangxian.art.view.TopView
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_title"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请人姓名"
                android:textColor="@color/txt_black1"
                android:textSize="@dimen/list_title_size" />

            <EditText
                android:id="@+id/askjiesuan_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/regist_et_bg_sel"
                android:hint="请输入申请人的姓名"
                android:padding="10dp"
                android:textColor="@color/txt_black3"
                android:textSize="@dimen/list_summary_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请人手机"
                android:textColor="@color/txt_black1"
                android:textSize="@dimen/list_title_size" />

            <EditText
                android:id="@+id/askjiesuan_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/regist_et_bg_sel"
                android:hint="请输入申请人的手机号码"
                android:numeric="integer"
                android:padding="10dp"
                android:textColor="@color/txt_black3"
                android:textSize="@dimen/list_summary_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/askjiesuan_huoqu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_btn"
            android:padding="5dp"
            android:text="获取验证码"
            android:textColor="@color/txt_whitetoback"
            android:textSize="@dimen/list_min_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="短信验证码"
                android:textColor="@color/txt_black1"
                android:textSize="@dimen/list_title_size" />

            <EditText
                android:id="@+id/askjiesuan_num"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/regist_et_bg_sel"
                android:hint="请输入短信验证码"
                android:numeric="integer"
                android:padding="10dp"
                android:textColor="@color/txt_black3"
                android:textSize="@dimen/list_summary_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申 请  金 额"
                android:textColor="@color/txt_black1"
                android:textSize="@dimen/list_title_size" />

            <EditText
                android:id="@+id/askjiesuan_price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/regist_et_bg_sel"
                android:hint="请输入紧急结算金额"
                android:numeric="decimal"
                android:padding="10dp"
                android:textColor="@color/txt_black3"
                android:textSize="@dimen/list_summary_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欲结算日期"
                android:textColor="@color/txt_black1"
                android:textSize="@dimen/list_title_size" />

            <TextView
                android:id="@+id/askjiesuan_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/regist_et_bg_sel"
                android:drawableRight="@drawable/pulldown"
                android:padding="10dp"
                android:text="请选择欲结算日期"
                android:textColor="@color/txt_black2"
                android:textSize="@dimen/list_summary_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="情 况  说 明"
                android:textColor="@color/txt_black1"
                android:textSize="@dimen/list_title_size" />

            <EditText
                android:id="@+id/askjiesuan_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/regist_et_bg_sel"
                android:gravity="left"
                android:hint="请输入紧急结算情况说明"
                android:lines="3"
                android:padding="5dp"
                android:textColor="@color/txt_black3"
                android:textSize="@dimen/list_summary_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/askjiesuan_quxiao"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_btn"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="取    消"
                android:textColor="@color/txt_whitetoback"
                android:textSize="@dimen/button_txt_size" />

            <TextView
                android:id="@+id/askjiesuan_baocun"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_btn"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="保    存"
                android:textColor="@color/txt_whitetoback"
                android:textSize="@dimen/button_txt_size" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>