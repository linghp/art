<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="afterDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="5dp" 
    android:paddingBottom="5dp" >

    <CheckBox
        android:id="@+id/check_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="6dp"
        android:button="@drawable/check_sel"
        android:focusable="false" />

    <ImageView
        android:id="@+id/car_goodsimg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_empty" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="4" >

        <TextView
            android:id="@+id/car_goodsname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="2014冬装羊羔毛翻领情侣棉衣" />

        <TextView
            android:id="@+id/car_goodsattr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_goodsname"
            android:layout_marginTop="5dp"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/car_goodsstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_goodsattr"
            android:layout_marginTop="5dp"
            android:drawablePadding="4dp"
            android:textColor="@color/red300"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="退货状态："
            android:visibility="gone" 
            />
