<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_white2" >

    <com.shangxian.art.view.TopView
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_title"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/shopssummary_linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/txt_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/shopssummary_shopsimg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_loading" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/shopssummary_shopsname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="云南神奇水果专卖店"
                        android:textColor="@color/txt_black2"
                        android:textSize="@dimen/list_title_size" />

                    <TextView
                        android:id="@+id/shopssummary_guanzu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0人关注"
                        android:textColor="@color/txt_black2"
                        android:textSize="@dimen/list_min_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shopssummary_linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shopssummary_linear1"
                android:layout_marginTop="20dp"
                android:background="@color/txt_white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="掌柜名"
                        android:textColor="@color/txt_black2"
                        android:textSize="@dimen/list_summary_size" />

                    <TextView
                        android:id="@+id/shopssummary_zhanggui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="yang~洋"
                        android:textColor="@color/txt_black1"
                        android:textSize="@dimen/list_summary_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电    话"
                        android:textColor="@color/txt_black2"
                        android:textSize="@dimen/list_summary_size" />

                    <TextView
                        android:id="@+id/shopssummary_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/txt_black1"
                        android:textSize="@dimen/list_summary_size" />

                    <ImageView
                        android:id="@+id/shopssummary_phoneimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/call_btn" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地    址"
                        android:textColor="@color/txt_black2"
                        android:textSize="@dimen/list_summary_size" />

                    <TextView
                        android:id="@+id/shopssummary_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/txt_black1"
                        android:textSize="@dimen/list_summary_size" />

                    <ImageView
                        android:id="@+id/shopssummary_addressimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        android:src="@drawable/fourth_tab"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/shopssummary_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shopssummary_linear2"
                android:padding="10dp"
                android:text="退货信息"
                android:textColor="@color/txt_black2"
                android:textSize="@dimen/list_title_size" />

            <LinearLayout
                android:id="@+id/shopssummary_linear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shopssummary_tv1"
                android:background="@color/txt_white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退货人"
                        android:textColor="@color/txt_black2"
                        android:textSize="@dimen/list_summary_size" />

                    <TextView
                        android:id="@+id/shopssummary_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/txt_black1"
                        android:textSize="@dimen/list_summary_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电    话"
                        android:textColor="@color/txt_black2"
                        android:textSize="@dimen/list_summary_size" />

                    <TextView
                        android:id="@+id/shopssummary_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/txt_black1"
                        android:textSize="@dimen/list_summary_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地    址"
                        android:textColor="@color/txt_black2"
                        android:textSize="@dimen/list_summary_size" />

                    <TextView
                        android:id="@+id/shopssummary_tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/txt_black1"
                        android:textSize="@dimen/list_summary_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shopssummary_linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shopssummary_linear4"
                android:layout_marginTop="20dp"
                android:background="@color/txt_white"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/shopssummary_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_black2"
                    android:textSize="@dimen/list_min_size" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>