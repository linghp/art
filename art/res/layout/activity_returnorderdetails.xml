<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_white3" >

    <com.shangxian.art.view.TopView
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/returnorderdetails_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_title"
        android:background="@color/txt_white"
        android:orientation="vertical"
        android:padding="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款时间"
                android:textColor="@color/txt_black3"
                android:textSize="@dimen/list_title_size" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/txt_black3" />

            <TextView
                android:id="@+id/returnorderdetails_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2015-5-30 22:31"
                android:textColor="@color/txt_black1"
                android:textSize="@dimen/list_title_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/txt_black3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款状态"
                android:textColor="@color/txt_black3"
                android:textSize="@dimen/list_title_size" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/txt_black3" />

            <TextView
                android:id="@+id/returnorderdetails_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="代卖家审核"
                android:textColor="@color/txt_red"
                android:textSize="@dimen/list_title_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/txt_black3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货物状态"
                android:textColor="@color/txt_black3"
                android:textSize="@dimen/list_title_size" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/txt_black3" />

            <TextView
                android:id="@+id/returnorderdetails_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="已收到货"
                android:textColor="@color/txt_black1"
                android:textSize="@dimen/list_title_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/txt_black3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否需要退还货物"
                android:textColor="@color/txt_black3"
                android:textSize="@dimen/list_title_size" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/txt_black3" />

            <TextView
                android:id="@+id/returnorderdetails_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="是"
                android:textColor="@color/txt_black1"
                android:textSize="@dimen/list_title_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/txt_black3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退还金额"
                android:textColor="@color/txt_black3"
                android:textSize="@dimen/list_title_size" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/txt_black3" />

            <TextView
                android:id="@+id/returnorderdetails_tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="¥300"
                android:textColor="@color/txt_black1"
                android:textSize="@dimen/list_title_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/txt_black3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款原因"
                android:textColor="@color/txt_black3"
                android:textSize="@dimen/list_title_size" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/txt_black3" />

            <TextView
                android:id="@+id/returnorderdetails_tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="货物有瑕疵"
                android:textColor="@color/txt_black1"
                android:textSize="@dimen/list_title_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/txt_black3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款说明"
                android:textColor="@color/txt_black3"
                android:textSize="@dimen/list_title_size" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/txt_black3" />

            <TextView
                android:id="@+id/returnorderdetails_tv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="货物有瑕疵"
                android:textColor="@color/txt_black1"
                android:textSize="@dimen/list_title_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_below="@id/returnorderdetails_linear1"
        android:weightSum="3"
        android:visibility="gone" >

        <TextView
            android:id="@+id/returnorderdetails_tv8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/soge_not_bg_sel"
            android:gravity="center_horizontal"
            android:onClick="doClick"
            android:padding="8dp"
            android:text="审核不通过"
            android:textColor="@color/txt_whitetoback"
            android:textSize="@dimen/list_title_size" />

        <TextView
            android:id="@+id/returnorderdetails_tv9"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/soge_next_bg_sel"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="审核通过"
            android:textColor="@color/txt_whitetoback"
            android:textSize="@dimen/list_title_size" />

        <TextView
            android:id="@+id/returnorderdetails_tv10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/soge_next_bg_sel"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="退款"
            android:textColor="@color/txt_whitetoback"
            android:textSize="@dimen/list_title_size" />
    </LinearLayout>

</RelativeLayout>