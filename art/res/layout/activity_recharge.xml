<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_white2" >

    <com.shangxian.art.view.TopView
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/recharge_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_title"
        android:padding="10dp"
        android:text="充值余额"
        android:textColor="@color/txt_black2"
        android:textSize="@dimen/list_title_size" />

    <LinearLayout
        android:id="@+id/recharge_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recharge_txt1"
        android:background="@color/txt_white"
        android:orientation="horizontal"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/regist_et_bg_sel"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/txt_black2"
                android:textSize="@dimen/list_title_size" />

            <EditText
                android:id="@+id/recharge_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="请输入金额"
                android:numeric="decimal"
                android:textColor="@color/txt_black2"
                android:textSize="@dimen/list_title_size" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/recharge_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recharge_linear1"
        android:padding="10dp"
        android:text="充值方式"
        android:textColor="@color/txt_black2"
        android:textSize="@dimen/list_title_size" />

    <LinearLayout
        android:id="@+id/recharge_linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recharge_txt2"
        android:background="@color/txt_white"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:id="@+id/recharge_zhifubao_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/recharge_zhifubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sel_t" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/alipaypayment"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="支付宝支付"
                android:textColor="@color/txt_black2"
                android:textSize="@dimen/list_title_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/txt_black3" />

        <LinearLayout
            android:id="@+id/recharge_yinhangka_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/recharge_yinhangka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sel_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/bankcard_payment"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="银行卡/信用卡支付"
                android:textColor="@color/txt_black2"
                android:textSize="@dimen/list_title_size" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/txt_black3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recharge_linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recharge_linear2"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/recharge_quxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_btn"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="取消"
            android:textColor="@color/txt_whitetoback"
            android:textSize="@dimen/button_txt_size" />

        <TextView
            android:id="@+id/recharge_queren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/btn_btn"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="确认"
            android:textColor="@color/txt_whitetoback"
            android:textSize="@dimen/button_txt_size" />
    </LinearLayout>

</RelativeLayout>