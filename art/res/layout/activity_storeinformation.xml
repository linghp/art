<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_white2" >

    <com.shangxian.art.view.TopView
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/storeinformation_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_btn"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="保存"
        android:textColor="@color/txt_whitetoback"
        android:textSize="@dimen/button_txt_size" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/storeinformation_tv"
        android:layout_below="@id/top_title"
        android:background="@color/txt_white"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/txt_white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺名称"
                    android:textColor="@color/txt_black2"
                    android:textSize="@dimen/list_summary_size" />

                <EditText
                    android:id="@+id/storeinformation_et1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/regist_et_bg_sel"
                    android:padding="10dp"
                    android:textColor="@color/txt_black1"
                    android:textSize="@dimen/list_summary_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/txt_black3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/txt_white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="店铺门面"
                    android:textColor="@color/txt_black2"
                    android:textSize="@dimen/list_summary_size" />

                <ImageView
                    android:id="@+id/storeinformation_img1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/add_photo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:text="图片大小50k以内"
                    android:textColor="@color/txt_black2"
                    android:textSize="@dimen/list_min_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/txt_black3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/txt_white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="店铺简介"
                    android:textColor="@color/txt_black2"
                    android:textSize="@dimen/list_summary_size" />

                <EditText
                    android:id="@+id/storeinformation_et2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/regist_et_bg_sel"
                    android:gravity="top"
                    android:lines="3"
                    android:padding="10dp"
                    android:textColor="@color/txt_black1"
                    android:textSize="@dimen/list_summary_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/txt_black3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/txt_white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话"
                    android:textColor="@color/txt_black2"
                    android:textSize="@dimen/list_summary_size" />

                <EditText
                    android:id="@+id/storeinformation_et3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/regist_et_bg_sel"
                    android:numeric="integer"
                    android:padding="10dp"
                    android:textColor="@color/txt_black1"
                    android:textSize="@dimen/list_summary_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/txt_black3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/txt_white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地        址"
                    android:textColor="@color/txt_black2"
                    android:textSize="@dimen/list_summary_size" />

                <EditText
                    android:id="@+id/storeinformation_et4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/regist_et_bg_sel"
                    android:padding="10dp"
                    android:textColor="@color/txt_black1"
                    android:textSize="@dimen/list_summary_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/txt_black3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/txt_white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="退货信息"
                    android:textColor="@color/txt_black2"
                    android:textSize="@dimen/list_summary_size" />

                <EditText
                    android:id="@+id/storeinformation_et5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/regist_et_bg_sel"
                    android:gravity="top"
                    android:lines="3"
                    android:padding="10dp"
                    android:textColor="@color/txt_black1"
                    android:textSize="@dimen/list_summary_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>