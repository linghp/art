<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_white2" >

    <com.shangxian.art.view.TopView
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/progressenquiry_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_title"
        android:padding="10dp"
        android:text="情况说明"
        android:textColor="@color/txt_black" />

    <TextView
        android:id="@+id/progressenquiry_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressenquiry_tv1"
        android:background="@color/txt_white"
        android:padding="10dp"
        android:text="由于某种神马原因情况说明某种神马原因情况说明某种神马原因情况说明某种神马原因情况说明，所以要申请紧急结算"
        android:textColor="@color/txt_black2" />

    <ListView
        android:id="@+id/progressenquiry_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressenquiry_tv2"
        android:scrollbars="none" >
    </ListView>

</RelativeLayout>