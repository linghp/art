<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_white2" >

    <com.shangxian.art.view.TopView
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/changepassword_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_title"
        android:layout_marginTop="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="10dp" >

        <EditText
            android:id="@+id/changepasswrod_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/regist_et_bg_sel"
            android:hint="请输入当前登录密码"
            android:padding="10dp"
            android:textColor="@color/txt_black1"
            android:textSize="@dimen/list_title_size"
            android:visibility="visible" />
        <EditText
            android:id="@+id/changepasswrod_old_zhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/regist_et_bg_sel"
            android:hint="请输入当前支付密码"
            android:padding="10dp"
            android:textColor="@color/txt_black1"
            android:textSize="@dimen/list_title_size"
            android:visibility="gone" />

        <EditText
            android:id="@+id/changepasswrod_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/regist_et_bg_sel"
            android:hint="新的登录密码"
            android:padding="10dp"
            android:textColor="@color/txt_black1"
            android:textSize="@dimen/list_title_size"
            android:visibility="visible" />
        <EditText
            android:id="@+id/changepasswrod_new_zhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/regist_et_bg_sel"
            android:hint="新的支付密码"
            android:padding="10dp"
            android:textColor="@color/txt_black1"
            android:textSize="@dimen/list_title_size"
            android:visibility="gone" />

        <EditText
            android:id="@+id/changepasswrod_new1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/regist_et_bg_sel"
            android:hint="重复新的登录密码"
            android:padding="10dp"
            android:textColor="@color/txt_black1"
            android:textSize="@dimen/list_title_size"
            android:visibility="visible" />
        <EditText
            android:id="@+id/changepasswrod_new_zhi1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/regist_et_bg_sel"
            android:hint="重复新的支付密码"
            android:padding="10dp"
            android:textColor="@color/txt_black1"
            android:textSize="@dimen/list_title_size"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="密码由6-20位英文字母、数字或符号组成"
            android:textColor="@color/txt_black2"
            android:textSize="@dimen/list_summary_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/changepassword_linear1"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/changepasswrod_quxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_btn"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="取消"
            android:textColor="@color/txt_whitetoback"
            android:textSize="@dimen/button_txt_size" />

        <TextView
            android:id="@+id/changepasswrod_baocun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/btn_btn"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="保存"
            android:textColor="@color/txt_whitetoback"
            android:textSize="@dimen/button_txt_size" />
    </LinearLayout>

</RelativeLayout>